<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="~/Home/Index">Receitas</a>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/Ingredientes/Cadastrar">Ingredientes <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/Receitas/Index">Lista de Receitas</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Area Administrativa</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="~/TiposRefeicoes/Index">Tipos de Refeições</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="~/NiveisDificuldades/Index">Niveis de Dificuldade</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                   @ViewBag.Perfil
                </li>
                @if (Request.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Logout", "Logout","Perfis","Perfis", new { @class = "btn btn-secondary my-2 my-sm-0" })
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("Login", "Login", "Perfis","Perfis", new { @class = "btn btn-secondary my-2 my-sm-0" })
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div id="conteudo" class="container body-content" style="margin-top:30px;margin-bottom:30px">
        @RenderBody()
    </div>

    <footer>
        <hr />
        <p style="text-align:center">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</body>
</html>
@*@RenderSection("scripts", required: false)*@
@model IEnumerable<ProjetoReceitas.Models.Receita>
@{
    //List<Ingrediente> ingredientes = ViewBag.Ingredientes;
    ProjetoReceitas.Models.Ingrediente ingrediente = ViewBag.Ingrediente;
}
<h2>Index</h2>

<p>
    @*<button type="button" onclick="location.href='@Url.Action("AdicionarIngredientes","Receitas")'" class="btn btn-secondary my-2 my-sm-0">Cadastrar Receita</button>*@
    @Html.ActionLink("Cadastrar Receita", "AdicionarIngredientes", "AdcIngrediente","AdcIngrediente", new { @class = "btn btn-secondary my-2 my-sm-0" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TempoPreparo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Imagem)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TempoPreparo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.ReceitaId }) |
                @Html.ActionLink("Vizualizar", "Cadastrar", "Comentarios", new { id = item.ReceitaId },null) |
                @Html.ActionLink("Delete", "Remover", new { id = item.ReceitaId })
            </td>
        </tr>
    }
</table>



